#include <stdio.h>
int main()
 {
 	int input;
 	printf("Enter a positive number:");
    scanf("%d",&input);
    if(input%2==0)
    {
    	printf("Even");
    } else
     {
     	printf("Odd");
     }
    return 0;
}
#include <stdio.h>
int main()
 {
 	char ch;
 	printf("Enter any letter:");
    scanf("%c",&ch);
    if(ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u')
    {
    	printf("Vowel");
    } else
     {
     	printf("Consonent");
     }
    return 0;
}
#include <stdio.h>
int main()
 {
 	int age;
 	printf("Enter your age:");
    scanf("%d",&age);
    if(age<2)
    {
    	printf("infant");
    } else if(age <10)
     {
     	printf("Child");
     }
     else if(age <20)
     {
     	printf("Teenage");
     }
     else if(age <30)
     {
     	printf("Adult");
     }
     else if(age >=30)
     {
     	printf("Old");
     }
    return 0;
}
